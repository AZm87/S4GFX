<Window x:Class="S4GFXInterface.PathSplashscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S4GFXInterface"
        mc:Ignorable="d"
        Title="S4GFX - Path Selection" Height="140" Width="300" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" MinWidth="290">
	<Grid MinWidth="284">
		<Label Content="Settler IV Game Folder:" HorizontalAlignment="Left" Margin="6,10,0,0" VerticalAlignment="Top" Height="25" Width="268"/>
		<TextBox x:Name="Path" HorizontalAlignment="Left" Height="23" Margin="10,35,0,0" TextWrapping="Wrap" Text="Path to S4_Main.exe" VerticalAlignment="Top" Width="238" TextChanged="Path_TextChanged"/>
		<Button x:Name="FolderDialog" Content="..." HorizontalAlignment="Left" Margin="253,35,0,0" VerticalAlignment="Top" Width="21" Height="23" Click="FolderDialog_Click"/>
		<Button x:Name="Select" Content="Select!" HorizontalAlignment="Left" Margin="199,71,0,0" VerticalAlignment="Top" Width="75" Click="Select_Click"/>
		<Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>

	</Grid>
</Window>
