<UserControl x:Class="S4GFXInterface.Controls.HeaderButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:S4GFXInterface.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="70">
	<Button x:Name="Butt" Click="Butt_Click" BorderBrush="{DynamicResource HeaderStandardColor}">
		<Button.Background>
			<SolidColorBrush Color="#FFF0F0F0"/>
		</Button.Background>
		<DockPanel LastChildFill="True">
			<Image DockPanel.Dock="Top" Source="{Binding ImageSource}" Stretch="Uniform" Height="50" />
			<TextBlock HorizontalAlignment="Center" Text="{Binding Heading}" FontSize="12" />
		</DockPanel>
	</Button>
</UserControl>
